# ============================================================================
# SciLEx Main Configuration - Quick Start
# ============================================================================
#
# Copy this file to 'scilex.config.yml' and customize for your research
#
# Essential variables below (keywords, years, APIs, mode, quality filters).
# Advanced settings? See scilex.advanced.yml.example
# API credentials? See src/api.config.yml.example
#
# ============================================================================

# ============================================================================
# RESEARCH QUESTION - Customize these for your project
# ============================================================================

# Keywords for paper search - supports two modes:
#
# Single group (papers matching ANY keyword):
#   keywords:
#     - ["machine learning", "deep learning", "neural networks"]
#
# Dual groups (papers matching ANY from group1 AND ANY from group2):
#   keywords:
#     - ["group1_term1", "group1_term2"]
#     - ["group2_term1", "group2_term2"]
#
keywords:
  - ["RAG", "Retrieval Augmented Generation", "LLM", "Large Language Model"]
  - ["Knowledge Graph", "knowledge graphs", "semantic network"]

# Years to search (creates separate queries for each year)
years:
  - 2023
  - 2024
  - 2025

# Data sources to query
# Free APIs: OpenAlex, HAL, DBLP, Arxiv, GoogleScholar
# Paid APIs: SemanticScholar (free tier OK), IEEE, Elsevier, Springer
apis:
  - SemanticScholar
  - OpenAlex
  - Arxiv

# Semantic Scholar API mode - IMPORTANT for collection speed
# Choose wisely based on your API tier:
#
#   "regular" (RECOMMENDED for most users):
#     * Standard search endpoint (/paper/search)
#     * Results per page: 100 papers
#     * Rate limit: 1 request/second (with API key)
#     * Works with standard API keys and free tier
#     * Best for: Small to medium collections (up to 10,000 papers)
#
#   "bulk" (POWER USERS ONLY):
#     * Bulk search endpoint (/paper/search/bulk)
#     * Results per page: 1000 papers (10x larger batches)
#     * Rate limit: 1 request/second
#     * 10x FASTER collection (fewer API calls needed)
#     * Requires: Higher-tier API access or special approval
#     * Apply at: https://www.semanticscholar.org/product/api#api-key-form
#     * Best for: Large collections (50,000+ papers)
#
# Example: 5000 papers search
#   - regular mode: 50 requests (5000 / 100) = ~50 seconds
#   - bulk mode:    5 requests  (5000 / 1000) = ~5 seconds
#
semantic_scholar_mode: regular

# Project identification
collect_name: my_research_project

# ============================================================================
# QUALITY FILTERS - Core filtering decisions
# ============================================================================

quality_filters:
  # Paper type restrictions (whitelist specific types)
  enable_itemtype_filter: false
  allowed_item_types:
    - journalArticle    # Peer-reviewed journals
    - conferencePaper   # Conference proceedings

  # Content requirements
  require_abstract: true        # Literature review? → true | Bibliometrics? → false
  require_doi: false            # Google Scholar users? → false

  # Focus on impactful papers
  aggregate_get_citations: true
  apply_citation_filter: true

  # Output size (null for unlimited, 500-1000 for focused reviews)
  max_papers: 1000

# ============================================================================
# NOTES
# ============================================================================
#
# Default values (automatically used, no need to specify):
#   - Abstract length validation: 50-1000 words
#   - Minimum authors: 1
#   - Generate quality report: true
#   - Apply relevance ranking: true
#   - Abstract quality filter: disabled (enable in scilex.advanced.yml)
#   - Open access requirement: false
#   - Output directory: output/
#   - Aggregated filename: aggregated_results.csv
#
# For advanced customization (rarely needed):
#   - Copy scilex.advanced.yml.example to scilex.advanced.yml
#   - Uncomment settings you want to override
#   - See advanced file for all available options
#
# API Configuration (required for paid APIs):
#   - See src/api.config.yml.example
#   - Copy to src/api.config.yml and add your credentials
#
# ============================================================================
