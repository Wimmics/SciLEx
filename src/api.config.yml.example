zotero:
    api_key: "YOUR_ZOTERO_API_KEY"
    user_mode: "user"  # or "group" for group libraries
google_scholar:
    # Google Scholar uses the free 'scholarly' Python package with automatic proxy rotation
    # No API key needed! The collection may be slower than paid APIs due to web scraping
    # and proxy rotation, but it's completely free
    enabled: true  # Set to false to disable Google Scholar collection
springer:
    api_key: "YOUR_SPRINGER_API_KEY"
sem_scholar:
    api_key: "YOUR_SEMANTIC_SCHOLAR_API_KEY"  # Optional - can work without
elsevier:
    api_key: "YOUR_ELSEVIER_API_KEY"
    inst_token: "YOUR_INSTITUTIONAL_TOKEN"  # Optional but recommended for better access
ieee:
    api_key: "YOUR_IEEE_API_KEY"
orcid:
    dir: 'YOUR_WORK_DIRECTORY'
    client_id: "YOUR_ORCID_CLIENT_ID"
    client_secret: "YOUR_ORCID_CLIENT_SECRET"