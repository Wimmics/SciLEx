# SciLEx Environment Variables Configuration
#
# Optional environment variables to customize SciLEx behavior.
# Copy this file to .env and uncomment/modify values as needed.
#
# Note: .env files are automatically loaded by many IDEs and tools.
# The application uses os.environ.get() to read these variables.

# ============================================================================
# Logging Configuration
# ============================================================================

# LOG_LEVEL: Controls the verbosity of log output
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
# Default: INFO
# LOG_LEVEL=INFO

# LOG_COLOR: Enable colored log output in terminal
# Options: true, false
# Default: auto-detect based on terminal capabilities
# LOG_COLOR=true

# ============================================================================
# Collection Configuration
# ============================================================================

# USE_ASYNC_COLLECTION: Use async collection for faster API queries
# Options: true, false
# Default: true
# Note: Async collection is faster but may be harder to debug
# USE_ASYNC_COLLECTION=true

# USE_STATE_DB: Use SQLite database for state persistence (experimental)
# Options: true, false
# Default: false
# Note: If false, uses JSON files (state_details.json)
# USE_STATE_DB=false

# ============================================================================
# Usage Examples
# ============================================================================
#
# 1. Debug logging:
#    LOG_LEVEL=DEBUG
#    LOG_COLOR=true
#
# 2. Production (minimal logs):
#    LOG_LEVEL=WARNING
#    LOG_COLOR=false
#
# 3. Disable async for debugging:
#    USE_ASYNC_COLLECTION=false
#    LOG_LEVEL=DEBUG
