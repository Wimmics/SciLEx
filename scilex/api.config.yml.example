# ============================================================================
# SciLEx API Configuration - Quick Start
# ============================================================================
#
# Copy this file to 'src/api.config.yml' and add your API credentials
#
# Only include APIs you actually use. Leave others commented out.
# For more details, see CLAUDE.md in the project root.
#
# ============================================================================

# ============================================================================
# REQUIRED API KEYS (add credentials for APIs you want to use)
# ============================================================================

Zotero:
  api_key: "YOUR_ZOTERO_API_KEY"
  user_id: "YOUR_ZOTERO_USER_ID"  # Find at https://www.zotero.org/settings/keys
  user_mode: "user"  # or "group" for group libraries

# Uncomment and fill in for IEEE Xplore
# IEEE:
#   api_key: "YOUR_IEEE_API_KEY"

# Uncomment and fill in for Elsevier/ScienceDirect
# Elsevier:
#   api_key: "YOUR_ELSEVIER_API_KEY"
#   inst_token: null  # Optional institutional token, or leave null

# Uncomment and fill in for Springer if you have the same api key for the open access endpoint and for the meta endpoint
# Springer:
#   api_key: "YOUR_SPRINGER_API_KEY"
# Springer:
#   api_key:
#     meta_api_key: "YOUR_SPRINGER_OPEN_ACCESS_API_KEY"
#     openaccess_api_key: "YOUR_SPRINGER_META_API_KEY"

# Uncomment and fill in for Springer if you have api keys for the open access endpoint and for the meta endpoint

# Semantic Scholar (optional but recommended for better rate limits)
SemanticScholar:
  api_key: "YOUR_SEMANTIC_SCHOLAR_API_KEY"  # Free tier OK, get at https://www.semanticscholar.org/product/api

# HuggingFace (optional - for paper enrichment with ML models/datasets/code repos)
HuggingFace:
  token: null  # Optional HF token (get at https://huggingface.co/settings/tokens)
               # Benefits: 5x higher rate limit (5 req/sec vs 1 req/sec)
               # Leave null to use public API (works but slower)

# PubMed - Biomedical literature (35M+ papers, ~25% with PMC PDFs)
# Free tier: 3 req/sec, With API key: 10 req/sec
# Get key at: https://www.ncbi.nlm.nih.gov/account/settings/
# PubMed:
#   api_key: "YOUR_NCBI_API_KEY"  # Optional but recommended for better rate limits

# ORCID integration (optional)
# ORCID:
#   client_id: "YOUR_ORCID_CLIENT_ID"
#   client_secret: "YOUR_ORCID_CLIENT_SECRET"
#   dir: "YOUR_WORK_DIRECTORY"

# ============================================================================
# FREE APIs (no configuration needed, just enable in scilex.config.yml)
# ============================================================================
#
# These APIs are free to use - no API keys required:
#   - OpenAlex: Comprehensive open database (https://docs.openalex.org)
#   - Arxiv: Preprints (https://info.arxiv.org/help/api)
#   - HAL: French open archive (https://api.archives-ouvertes.fr/docs)
#   - DBLP: Computer science bibliography (https://dblp.org)
#   - Istex: French academic archive (https://api.istex.fr/documentation)
#   - PubMed: Biomedical literature (https://www.ncbi.nlm.nih.gov/home/develop/api/)
#
# To enable: Add to 'apis' list in scilex.config.yml
# Example: apis: [OpenAlex, Arxiv, HAL, DBLP, PubMed]
#

# OpenAlex - Free API key recommended (100k credits/day vs 100 without)
# Get yours at: https://openalex.org/settings/api
# OpenAlex:
#   api_key: "YOUR_OPENALEX_API_KEY"

# ============================================================================
# RATE LIMITS (Optional - uses sensible defaults if not specified)
# ============================================================================
#
# SciLEx auto-selects rate limits based on whether you have an API key:
#   PubMed:   3 req/sec (free) → 10 req/sec (with key)
#   Elsevier: 2 req/sec (free) → 9 req/sec (with key)
#   Arxiv:    0.33 req/sec (1 per 3 seconds, no key system)
#
# You only need to override if you have special access or want lower rates.
#
# rate_limits:
#   SemanticScholar: 1.0      # Same with or without key
#   OpenAlex: 10.0            # Same with or without key
#   Arxiv: 0.33               # 1 request per 3 seconds (no key system)
#   IEEE: 2.0                 # Custom per registration
#   Elsevier: 9.0             # 9 req/sec with key (2 without)
#   Springer: 1.67            # 100 req/min
#   HAL: 10.0                 # No documented limit
#   DBLP: 1.0                 # 1-2s between requests
#   Istex: 5.0                # No documented limit
#   PubMed: 10.0              # 10 req/sec with key (3 without)
